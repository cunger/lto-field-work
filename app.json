{
  "expo": {
    "name": "lto-field-work",
    "slug": "lto-field-work",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6ec1e4"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "buildNumber": "54",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "The app accesses your photos to share them with Love the Oceans.",
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access your camera",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      },
      "bundleIdentifier": "lto-field-work"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6ec1e4"
      },
      "package": "LTO.FieldWork",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 31,
            "targetSdkVersion": 31,
            "buildToolsVersion": "31.0.0"
          },
          "ios": {
            "deploymentTarget": "13.0"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "We want to access your photo gallery so you can pick pictures you want to share with us."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow us to access your photo gallery.",
          "savePhotosPermission": "Allow us to save pictures you take to your photo gallery.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ecd2516a-3636-4e4a-94cb-c1d687e3d7ca"
      }
    }
  }
}
